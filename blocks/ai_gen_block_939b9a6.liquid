{% doc %}
  @prompt
    need a contact form with these fields:
    
    I am a: [Consumer] or [Consumer’s Authorized Agent]
    
    Consumer’s first name:
    
    Consumer’s last name:
    
    Consumer’s email address:
    
    Consumer’s phone number:
    
    Consumer’s address:
    
    Consumer’s city:
    
    Consumer’s state:
    
    Consumer’s country:
    
    Any other request details:
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
    padding: {{ block.settings.form_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-contact-form__wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.form_max_width }}px;
    margin: 0 auto;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.field_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.field_spacing | times: 1.5 }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__field-group-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.field_spacing }}px;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    display: block;
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .ai-contact-form__required-{{ ai_gen_id }} {
    color: {{ block.settings.required_color }};
    margin-left: 4px;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__select-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: 14px;
    transition: border-color 0.3s ease;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__select-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.field_spacing }}px;
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    width: 100%;
    padding: 14px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-contact-form__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-contact-form__message-{{ ai_gen_id }} {
    padding: 12px 16px;
    border-radius: {{ block.settings.input_border_radius }}px;
    margin-bottom: {{ block.settings.field_spacing }}px;
    font-size: 14px;
  }

  .ai-contact-form__success-{{ ai_gen_id }} {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .ai-contact-form__error-{{ ai_gen_id }} {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-{{ ai_gen_id }} {
      padding: {{ block.settings.form_padding | times: 0.6 }}px;
    }

    .ai-contact-form__row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-contact-form__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<consumer-contact-form-{{ ai_gen_id }}
  class="ai-contact-form-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-contact-form__wrapper-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-contact-form__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {%- form 'contact' -%}
      {% if form.posted_successfully? %}
        <div
          class="ai-contact-form__message-{{ ai_gen_id }} ai-contact-form__success-{{ ai_gen_id }}"
          role="status"
        >
          {{ block.settings.success_message }}
        </div>
      {% endif %}

      {% if form.errors %}
        <div
          class="ai-contact-form__message-{{ ai_gen_id }} ai-contact-form__error-{{ ai_gen_id }}"
          role="alert"
        >
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <input
        type="hidden"
        name="contact[subject]"
        value="{{ block.settings.form_subject }}"
      >

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="consumer-type-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          I am a:
          <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <select
          id="consumer-type-{{ ai_gen_id }}"
          name="contact[consumer_type]"
          class="ai-contact-form__select-{{ ai_gen_id }}"
          required
        >
          <option value="">Select an option</option>
          <option value="Consumer">Consumer</option>
          <option value="Consumer's Authorized Agent">Consumer's Authorized Agent</option>
        </select>
      </div>

      <div class="ai-contact-form__row-{{ ai_gen_id }}">
        <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
          <label
            for="first-name-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            Consumer's first name
            <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
          </label>
          <input
            type="text"
            id="first-name-{{ ai_gen_id }}"
            name="contact[first_name]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            autocomplete="given-name"
            required
          >
        </div>

        <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
          <label
            for="last-name-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            Consumer's last name
            <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
          </label>
          <input
            type="text"
            id="last-name-{{ ai_gen_id }}"
            name="contact[last_name]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            autocomplete="family-name"
            required
          >
        </div>
      </div>

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="email-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          Consumer's email address
          <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="email"
          id="email-{{ ai_gen_id }}"
          name="contact[email]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          autocomplete="email"
          required
        >
      </div>

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="phone-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          Consumer's phone number
          <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="tel"
          id="phone-{{ ai_gen_id }}"
          name="contact[phone]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          autocomplete="tel"
          required
        >
      </div>

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="address-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          Consumer's address
          <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="text"
          id="address-{{ ai_gen_id }}"
          name="contact[address]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          autocomplete="street-address"
          required
        >
      </div>

      <div class="ai-contact-form__row-{{ ai_gen_id }}">
        <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
          <label
            for="city-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            Consumer's city
            <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
          </label>
          <input
            type="text"
            id="city-{{ ai_gen_id }}"
            name="contact[city]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            autocomplete="address-level2"
            required
          >
        </div>

        <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
          <label
            for="state-{{ ai_gen_id }}"
            class="ai-contact-form__label-{{ ai_gen_id }}"
          >
            Consumer's state
            <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
          </label>
          <input
            type="text"
            id="state-{{ ai_gen_id }}"
            name="contact[state]"
            class="ai-contact-form__input-{{ ai_gen_id }}"
            autocomplete="address-level1"
            required
          >
        </div>
      </div>

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="country-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          Consumer's country
          <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
        </label>
        <input
          type="text"
          id="country-{{ ai_gen_id }}"
          name="contact[country]"
          class="ai-contact-form__input-{{ ai_gen_id }}"
          autocomplete="country-name"
          required
        >
      </div>

      <div class="ai-contact-form__field-group-{{ ai_gen_id }}">
        <label
          for="message-{{ ai_gen_id }}"
          class="ai-contact-form__label-{{ ai_gen_id }}"
        >
          Any other request details
        </label>
        <textarea
          id="message-{{ ai_gen_id }}"
          name="contact[body]"
          class="ai-contact-form__textarea-{{ ai_gen_id }}"
        ></textarea>
      </div>

      <button
        type="submit"
        class="ai-contact-form__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </button>
    {%- endform -%}
  </div>
</consumer-contact-form-{{ ai_gen_id }}>

<script>
  (function() {
    class ConsumerContactForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        if (form) {
          form.addEventListener('submit', function(event) {
            const requiredFields = form.querySelectorAll('[required]');
            let isValid = true;

            requiredFields.forEach(function(field) {
              if (!field.value.trim()) {
                isValid = false;
                field.style.borderColor = '#d72c0d';
              } else {
                field.style.borderColor = '';
              }
            });

            if (!isValid) {
              event.preventDefault();
            }
          });
        }
      }
    }

    customElements.define('consumer-contact-form-{{ ai_gen_id }}', ConsumerContactForm{{ ai_gen_id }});
  })();
</script>

