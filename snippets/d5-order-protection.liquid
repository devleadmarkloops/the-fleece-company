<style>
.os-container-d5 {
            max-width: 500px;
            margin: 0 auto;
        }

        .os-protection-wrapper-d5 {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 0 0 6px;
            cursor: pointer;
        }

        .os-icon-box-d5 {
            flex-shrink: 0;
            width: 50px;
            height: 50px;
        }

        .os-icon-image-d5 {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .os-content-box-d5 {
            flex: 1;
        }

        .os-title-price-row-d5 {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 16px;
            margin-bottom: -2px;
        }

        .os-title-d5 {
            font-size: 14px;
            font-weight: 400;
            color: #000000;
            line-height: 1.3;
        }

        .os-price-d5 {
            font-size: 15px;
            font-weight: 600;
            color: #000000;
            flex-shrink: 0;
        }

        .os-description-d5 {
            font-size: 13px;
            color: #666666;
            line-height: 1.4;
        }

        .os-switch-wrapper-d5 {
            flex-shrink: 0;
            {% comment %} padding-top: 18px; {% endcomment %}
        }

        .os-switch-d5 {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
        }

        .os-switch-input-d5 {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .os-slider-d5 {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .3s;
            border-radius: 24px;
        }

        .os-slider-d5:before {
            position: absolute;
            content: "";
            height: 17px;
            width: 17px;
            left: 3px;
            bottom: 1px;
            background-color: white;
            transition: .3s;
            border-radius: 50%;
        }

        .os-switch-input-d5:checked + .os-slider-d5 {
            background-color: #000000;
        }

        .os-switch-input-d5:checked + .os-slider-d5:before {
            transform: translateX(18px);
        }
    </style>
    
    <div class="os-container-d5">
        <label class="os-protection-wrapper-d5">
            <div class="os-icon-box-d5">
                <img src="{{product.featured_image | image_url: width: 150}}" 
                     alt="Order Protection" 
                     class="os-icon-image-d5">
            </div>
            <div class="os-content-box-d5">
                <div class="os-title-price-row-d5">
                    <div class="os-title-d5">CozyCare Order Protection</div>
                    <span class="os-price-d5" data-price="{{ product.price | money }}">{{ product.price | money }}</span>
                </div>
                <div class="os-description-d5">Protection for shipment damage, loss & theft.</div>
            </div>
            <div class="os-switch-wrapper-d5">
                <label class="os-switch-d5">
                    <input type="checkbox" 
                           id="orderProtection" 
                           class="os-switch-input-d5"
                           onchange="handleProtectionChange(this)">
                    <span class="os-slider-d5"></span>
                </label>
            </div>
        </label>
    </div>

