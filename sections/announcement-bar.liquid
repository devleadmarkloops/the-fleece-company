{%- liquid
  assign show_announcement_bar = true

  if section.blocks.size == 0
    assign show_announcement_bar = false
  endif

  if section.settings.only_homepage and request.page_type != 'index'
    assign show_announcement_bar = false
  endif

  assign announcement_height = 36
  assign countdown_block = nil
  assign announcement_blocks = section.blocks | where: 'type', 'announcement'
  
  for block in section.blocks
    if block.type == 'countdown'
      assign countdown_block = block
      break
    endif
  endfor

  assign has_countdown = false
  if countdown_block != nil and countdown_block.settings.date != blank
    assign has_countdown = true
  endif

  assign has_announcements = false
  if announcement_blocks.size > 0
    assign has_announcements = true
  endif
-%}

{%- if show_announcement_bar -%}
  {%- style -%}
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom }}px;
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
      --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
      --color-highlight: {{ section.settings.colors_highlight.red }}, {{ section.settings.colors_highlight.green }}, {{ section.settings.colors_highlight.blue }};
    }

    :root {
      --announcement-height: calc({{ announcement_height }}px + ({{ section.settings.padding_top | plus: section.settings.padding_bottom }}px * 0.75));
    }

    @media screen and (min-width: 990px) {
      :root {
        --announcement-height: {{ announcement_height | plus: section.settings.padding_top | plus: section.settings.padding_bottom }}px;
      }
    }

    {%- if has_countdown -%}
      #shopify-section-{{ section.id }} .announcement-countdown {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 0.8rem 1.5rem;
        font-size: {{ countdown_block.settings.text_size }}px;
        {%- if countdown_block.settings.use_custom_colors -%}
          --countdown-background: {{ countdown_block.settings.countdown_background.red }}, {{ countdown_block.settings.countdown_background.green }}, {{ countdown_block.settings.countdown_background.blue }};
          --countdown-text: {{ countdown_block.settings.countdown_text.red }}, {{ countdown_block.settings.countdown_text.green }}, {{ countdown_block.settings.countdown_text.blue }};
          background-color: rgb(var(--countdown-background));
          color: rgb(var(--countdown-text));
        {%- else -%}
          border-top: 0.1rem solid rgba(var(--color-foreground), 0.15);
        {%- endif -%}
      }

      #shopify-section-{{ section.id }} .announcement-countdown--top {
        border-top: none;
        {%- unless countdown_block.settings.use_custom_colors -%}
          border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.15);
        {%- endunless -%}
      }

      #shopify-section-{{ section.id }} .announcement-countdown__text {
        font-weight: 500;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__timer {
        display: flex;
        align-items: center;
        gap: 0.3rem;
        font-family: var(--font-heading-family);
        font-weight: 600;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__unit {
        display: flex;
        align-items: center;
        gap: 0.2rem;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__number {
        min-width: 2ch;
        text-align: center;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__separator {
        opacity: 0.6;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__label {
        font-size: 0.85em;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        opacity: 0.8;
      }

      #shopify-section-{{ section.id }} .announcement-countdown--compact .announcement-countdown__label {
        display: none;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__link {
        color: inherit;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__link:hover {
        opacity: 0.85;
      }

      #shopify-section-{{ section.id }} .announcement-countdown__message {
        display: none;
      }

      #shopify-section-{{ section.id }} .announcement-countdown[data-expired="true"] .announcement-countdown__timer,
      #shopify-section-{{ section.id }} .announcement-countdown[data-expired="true"] .announcement-countdown__text {
        display: none;
      }

      #shopify-section-{{ section.id }} .announcement-countdown[data-expired="true"] .announcement-countdown__message {
        display: block;
      }

      {%- if countdown_block.settings.hide_when_expired -%}
        #shopify-section-{{ section.id }} .announcement-countdown[data-expired="true"] {
          display: none;
        }
      {%- endif -%}

      @media screen and (max-width: 749px) {
        #shopify-section-{{ section.id }} .announcement-countdown {
          flex-wrap: wrap;
          gap: 0.5rem 1rem;
          padding: 0.6rem 1rem;
        }

        #shopify-section-{{ section.id }} .announcement-countdown__label {
          display: none;
        }
      }
    {%- endif -%}
  {%- endstyle -%}
  {{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}

  <div class="announcement-bar header-section--padding" role="region" aria-label="{{ 'accessibility.site_announcements' | t }}">
    {%- if has_countdown and countdown_block.settings.position == 'top' -%}
      {%- render 'announcement-countdown', block: countdown_block, position: 'top' -%}
    {%- endif -%}

    {%- if has_announcements -%}
      <div class="page-width">
        <announcement-bar data-layout="{{ section.settings.layout }}" data-mobile-layout="{{ section.settings.mobile_layout }}" data-autorotate="{{ section.settings.autorotate }}" data-autorotate-speed="{{ section.settings.autorotate_speed }}" data-block-count="{{ announcement_blocks.size }}" data-speed="{{ section.settings.speed }}" data-direction="{{ section.settings.direction }}">
          <div class="announcement-slider">
            {%- for block in announcement_blocks -%}
              <div class="announcement-slider__slide" style="--font-size: {{ block.settings.text_size }}px;" data-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
                {%- if block.settings.link != blank -%}
                  <a class="announcement-link" href="{{ block.settings.link }}">
                {%- endif -%}
                  {%- if block.settings.text_on_mobile != blank -%}
                    <span class="announcement-text small-hide medium-hide">
                      {%- render 'highlight-text', 
                        hl_input: block.settings.text, 
                        hl_style: block.settings.highlight_style,
                        hl_enable: block.settings.enable_highlight,
                        hl_animateWrap: true -%}
                      </span>
                    <span class="announcement-text large-up-hide">
                      {%- render 'highlight-text', 
                        hl_input: block.settings.text_on_mobile, 
                        hl_style: block.settings.highlight_style,
                        hl_enable: block.settings.enable_highlight,
                        hl_animateWrap: true -%}
                    </span>
                  {%- else -%}
                    <span class="announcement-text">
                      {%- render 'highlight-text', 
                        hl_input: block.settings.text, 
                        hl_style: block.settings.highlight_style,
                        hl_enable: block.settings.enable_highlight,
                        hl_animateWrap: true -%}
                    </span>
                  {%- endif -%}
                {%- if block.settings.link != blank -%}
                  </a>
                {%- endif -%}
              </div>
            {%- endfor -%}
          </div>
          {%- if section.settings.show_navigation and announcement_blocks.size > 1 -%}
            <div class="announcement__buttons">
              <button class="announcement__button announcement__button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">
                {% render 'icon', icon: 'chevron-alt' %}
              </button>
              <button class="announcement__button announcement__button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">
                {% render 'icon', icon: 'chevron-alt' %}
              </button>
            </div>
          {%- endif -%}
        </announcement-bar>
      </div>
    {%- endif -%}

    {%- if has_countdown and countdown_block.settings.position == 'bottom' -%}
      {%- render 'announcement-countdown', block: countdown_block, position: 'bottom' -%}
    {%- endif -%}
  </div>
  
  {%- unless request.design_mode -%}
    <script src="{{ 'announcement-bar.js' | asset_url }}" defer="defer"></script>
  {%- endunless -%}
{%- endif -%}

