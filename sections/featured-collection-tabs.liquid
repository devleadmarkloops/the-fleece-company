{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --image-position: {{ section.settings.image_position }};
    --color-highlight: {{ section.settings.colors_highlight.red }}, {{ section.settings.colors_highlight.green }}, {{ section.settings.colors_highlight.blue }};
  }

  .fc-tabs-header-row {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }
  
  @media screen and (min-width: 750px) {
    .fc-tabs-header-row {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    .fc-tabs-header-row .title-wrapper {
      margin: 0;
    }
  }

  .fc-tabs-nav-wrapper {
    overflow-x: auto;
    scrollbar-width: none; 
  }
  .fc-tabs-nav-wrapper::-webkit-scrollbar {
    display: none; 
  }
  .fc-tabs-nav {
    display: inline-flex;
    position: relative;
    gap: 2.5rem;
    /* border-bottom: 2px solid rgba(var(--color-foreground), 0.1); */
    padding-bottom: 1rem;
    min-width: max-content;
    position: relative;
  }
  .fc-tabs-nav::after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background-color: #F0EAE4;
    border-radius: 10px;
  }
  .fc-tab-btn {
    background: transparent;
    border: none;
    font-family: var(--new-font-heading-family, inherit);
    font-size: 1.6rem;
    color: rgba(var(--color-foreground), 0.5);
    cursor: pointer;
    padding: 0;
    white-space: nowrap;
    transition: color 0.3s ease;
  }
  .fc-tab-btn.is-active,
  .fc-tab-btn:hover {
    color: rgb(var(--color-foreground));
  }
  .fc-tab-indicator {
    position: absolute;
    bottom: -2px;
    left: 0;
    height: 5px;
    background-color: rgb(var(--color-foreground));
    transition: transform 0.3s cubic-bezier(0.25, 1, 0.5, 1), width 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    transform-origin: left;
    border-radius: 2px;
  }
  .fc-tab-panel {
    display: none; 
    animation: fadeIn 0.4s ease;
  }
  .fc-tab-panel.is-active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .fc-tabs-section-{{ section.id }} .swiper {
    overflow: hidden;
    width: 100%;
  }
  .fc-tabs-section-{{ section.id }} .swiper-wrapper {
    display: flex !important;
    flex-wrap: nowrap !important;
  }
  .fc-tabs-section-{{ section.id }} .swiper-slide {
    height: auto !important;
    box-sizing: border-box;
  }
{%- endstyle -%}

