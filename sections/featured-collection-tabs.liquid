<div class="fc-tabs-section-{{ section.id }} section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="page-width">
    
    <div class="fc-tabs-header-row">
      <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %}">
        <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">
          {%- render 'highlight-text', 
            hl_input: section.settings.heading, 
            hl_style: section.settings.highlight_style,
            hl_enable: section.settings.enable_highlight,
            hl_animateWrap: true -%}
        </{{ section.settings.heading_tag }}>
      </div>

      {%- if section.blocks.size > 0 -%}
        <div class="fc-tabs-nav-wrapper">
          <div class="fc-tabs-nav">
            {%- for block in section.blocks -%}
              <button type="button" class="fc-tab-btn {% if forloop.first %}is-active{% endif %}" data-target="panel-{{ section.id }}-{{ block.id }}" {{ block.shopify_attributes }}>
                {{ block.settings.title | default: block.settings.collection.title | default: 'Tab Title' }}
              </button>
            {%- endfor -%}
            <span class="fc-tab-indicator"></span>
          </div>
        </div>
      {%- endif -%}
    </div>

    <div class="fc-tabs-content">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        
        <div id="panel-{{ section.id }}-{{ block.id }}" class="fc-tab-panel {% if forloop.first %}is-active{% endif %}">
            
          <div class="swiper fc-swiper-{{ section.id }}-{{ block.id }}">
            <div class="swiper-wrapper">
              {%- for product in collection.products limit: section.settings.products_to_show -%}
                <div class="swiper-slide">
                  {% render 'card-product-v2',
                    card_product: product,
                    media_size: section.settings.image_ratio,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_quick_buy: section.settings.show_quick_buy,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    enable_quick_view: section.settings.enable_quick_view,
                    enable_color_swatches: section.settings.enable_color_swatches,
                    enable_countdown: section.settings.enable_countdown,
                    enable_image_fill: section.settings.enable_image_fill
                  %}
                </div>
              {%- else -%}
                {%- for i in (1..4) -%}
                  <div class="swiper-slide">
                    {% render 'card-product-placeholder', media_size: section.settings.image_ratio %}
                  </div>
                {%- endfor -%}
              {%- endfor -%}
            </div>
          </div>
          
          {%- if section.settings.show_view_all and collection.all_products_count > section.settings.products_to_show -%}
            <div class="view-all center" style="margin-top: 3rem;">
              <a href="{{ collection.url }}"
                class="button"
                aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: collection.title }}"
              >
                {{ 'sections.featured_collection.view_all' | t }}
              </a>
            </div>
          {%- endif -%}

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionEl = document.querySelector('.fc-tabs-section-{{ section.id }}');
    if (!sectionEl) return;

    const tabBtns = sectionEl.querySelectorAll('.fc-tab-btn');
    const tabPanels = sectionEl.querySelectorAll('.fc-tab-panel');
    const indicator = sectionEl.querySelector('.fc-tab-indicator');

    function updateIndicator(activeBtn) {
      if (!indicator || !activeBtn) return;
      const offsetLeft = activeBtn.offsetLeft;
      const width = activeBtn.offsetWidth;
      
      indicator.style.transform = `translateX(${offsetLeft}px)`;
      indicator.style.width = `${width}px`;
    }

    const initialActiveBtn = sectionEl.querySelector('.fc-tab-btn.is-active');
    if (initialActiveBtn) {
      setTimeout(() => updateIndicator(initialActiveBtn), 100); 
    }

    tabBtns.forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        
        tabBtns.forEach(b => b.classList.remove('is-active'));
        tabPanels.forEach(p => p.classList.remove('is-active'));

        this.classList.add('is-active');
        updateIndicator(this);

        const targetId = this.getAttribute('data-target');
        const targetPanel = sectionEl.querySelector('#' + targetId);
        if (targetPanel) {
          targetPanel.classList.add('is-active');
        }
      });
    });

    window.addEventListener('resize', () => {
      const currentActive = sectionEl.querySelector('.fc-tab-btn.is-active');
      if (currentActive) updateIndicator(currentActive);
    });

    if (typeof Swiper !== 'undefined') {
      const swipers = sectionEl.querySelectorAll('.swiper');
      swipers.forEach(swiperEl => {
        new Swiper(swiperEl, {
          slidesPerView: 2, 
          spaceBetween: 10,
          observer: true, 
          observeParents: true,
          breakpoints: {
            768: {
              slidesPerView: 3,
              spaceBetween: 15
            },
            1024: {
              slidesPerView: 4,
              spaceBetween: 20
            }
          }
        });
      });
    } else {
      console.warn('Swiper JS not loaded on this page. Slider will fall back to flex row.');
    }
  });
</script>

