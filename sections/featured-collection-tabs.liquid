{% comment %}
  Featured Collection Tabs Section
  Rewritten to extend the default logic with Swiper tabs.
{% endcomment %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --image-position: {{ section.settings.image_position }};
    --color-highlight: {{ section.settings.colors_highlight.red }}, {{ section.settings.colors_highlight.green }}, {{ section.settings.colors_highlight.blue }};
  }

  /* --- FC TABS LAYOUT CSS --- */
  .fc-tabs-header-row {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }
  
  @media screen and (min-width: 750px) {
    .fc-tabs-header-row {
      flex-direction: row;
      align-items: center; /* Aligns title and tabs next to each other */
      justify-content: space-between;
    }
    .fc-tabs-header-row .title-wrapper {
      margin: 0; /* Override default title margin */
    }
  }

  .fc-tabs-nav {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    gap: 1.5rem;
    scrollbar-width: none; /* Hides scrollbar Firefox */
  }
  .fc-tabs-nav::-webkit-scrollbar {
    display: none; /* Hides scrollbar Chrome/Safari */
  }

  .fc-tab-btn {
    background: transparent;
    border: none;
    font-family: var(--new-font-heading-family, inherit);
    font-size: 1.6rem;
    color: rgba(var(--color-foreground), 0.5);
    cursor: pointer;
    padding: 0 0 0.5rem 0;
    white-space: nowrap;
    position: relative;
    transition: color 0.3s ease;
  }
  .fc-tab-btn.is-active,
  .fc-tab-btn:hover {
    color: rgb(var(--color-foreground));
  }
  .fc-tab-btn::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: rgb(var(--color-foreground));
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  .fc-tab-btn.is-active::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  /* --- TAB PANELS --- */
  .fc-tab-panel {
    display: none; /* Hidden by default */
    animation: fadeIn 0.4s ease;
  }
  .fc-tab-panel.is-active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* --- SLIDER NAVIGATION & SWIPER PRECAUTION --- */
  .fc-tabs-content .slider-buttons {
    display: flex;
    justify-content: flex-end;
    margin-top: 1.5rem;
  }

  /* Force swiper to allow overflow visibility so cards/swatches are not clipped */
  .fc-tab-panel .swiper,
  .fc-tab-panel .swiper-wrapper,
  .fc-tab-panel .swiper-slide {
    overflow: visible !important;
  }
{%- endstyle -%}

