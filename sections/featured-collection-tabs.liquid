<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="page-width">
    
    {% comment %} --- HEADER & TABS ROW --- {% endcomment %}
    <div class="fc-tabs-header-row title-wrapper">
      <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %}">
        <{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">
          {%- render 'highlight-text', 
            hl_input: section.settings.heading, 
            hl_style: section.settings.highlight_style,
            hl_enable: section.settings.enable_highlight,
            hl_animateWrap: true -%}
        </{{ section.settings.heading_tag }}>
      </div>

      {%- if section.blocks.size > 0 -%}
        <div class="fc-tabs-nav">
          {%- for block in section.blocks -%}
            <button class="fc-tab-btn {% if forloop.first %}is-active{% endif %}" data-target="panel-{{ section.id }}-{{ block.id }}" {{ block.shopify_attributes }}>
              {{ block.settings.title | default: block.settings.collection.title | default: 'Tab Title' }}
            </button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

    {% comment %} --- TAB CONTENT PANELS (REWRITTEN AS SWIPER) --- {% endcomment %}
    <div class="fc-tabs-content slider-mobile-gutter">
      {%- for block in section.blocks -%}
        {%- assign collection = block.settings.collection -%}
        
        <div id="panel-{{ section.id }}-{{ block.id }}" class="fc-tab-panel {% if forloop.first %}is-active{% endif %}">
          <div class="fc-tabs-swiper-container">
            
            <div class="swiper fc-swiper-{{ section.id }}-{{ block.id }}">
              <div class="swiper-wrapper flex-grid flex-grid--rigid">
                {% comment %} Note: Slider--tablet standard classes were removed to prevent grid clash, using Swiper slidesPerView instead {% endcomment %}
                {%- for product in collection.products limit: section.settings.products_to_show -%}
                  <div class="swiper-slide slider__slide flex-grid__item">
                    {% render 'card-product-v2',
                      card_product: product,
                      media_size: section.settings.image_ratio,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_quick_buy: section.settings.show_quick_buy,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      enable_quick_view: section.settings.enable_quick_view,
                      enable_color_swatches: section.settings.enable_color_swatches,
                      enable_countdown: section.settings.enable_countdown,
                      enable_image_fill: section.settings.enable_image_fill
                    %}
                  </div>
                {%- else -%}
                  {% comment %} Placeholder Slides (using grid rigid classes) {% endcomment %}
                  {%- for i in (1..4) -%}
                    <div class="swiper-slide slider__slide flex-grid__item">
                      {% render 'card-product-placeholder', media_size: section.settings.image_ratio %}
                    </div>
                  {%- endfor -%}
                {%- endfor -%}
              </div>
            </div>

            {% comment %} Slider Arrows (Using native slider-buttons style from DEFAULT) {% endcomment %}
            {%- if section.settings.show_slider_arrows and collection.products.size > 2 -%}
              <div class="slider-buttons no-js-hidden small-hide">
                <button type="button" class="slider-button slider-button--prev fc-prev-{{ section.id }}-{{ block.id }}" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}" disabled="disabled">
                  {% render 'icon', icon: 'arrow' %}
                </button>
                <button type="button" class="slider-button slider-button--next fc-next-{{ section.id }}-{{ block.id }}" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">
                  {% render 'icon', icon: 'arrow' %}
                </button>
              </div>
            {%- endif -%}

          </div>
          
          {%- if section.settings.show_view_all and collection.all_products_count > section.settings.products_to_show -%}
            <div class="view-all center">
              <a href="{{ collection.url }}"
                class="button"
                aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: collection.title }}"
              >
                {{ 'sections.featured_collection.view_all' | t }}
              </a>
            </div>
          {%- endif -%}

        </div>
      {%- endfor -%}
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sectionId = '{{ section.id }}';
    const sectionEl = document.querySelector('#shopify-section-' + sectionId);
    if (!sectionEl) return;

    // 1. Initialize Swiper for each block (Ported setting from DEFAULT: horizontal_scroll, modified for 2-column mobile)
    {%- for block in section.blocks -%}
      new Swiper('.fc-swiper-' + sectionId + '-{{ block.id }}', {
        slidesPerView: 2, /* 2 items on mobile, matching default grid */
        spaceBetween: 10,
        observer: true, /* CRITICAL for hidden tabs */
        observeParents: true,
        {% if section.settings.enable_drag %}
          grabCursor: true,
          simulateTouch: true,
        {% else %}
          simulateTouch: false,
        {% endif %}
        navigation: {
          nextEl: '.fc-next-' + sectionId + '-{{ block.id }}',
          prevEl: '.fc-prev-' + sectionId + '-{{ block.id }}',
        },
        breakpoints: {
          768: {
            slidesPerView: 3,
            spaceBetween: 15
          },
          1024: {
            slidesPerView: 4,
            spaceBetween: 20
          }
        }
      });
    {%- endfor -%}

    // 2. Handle Tab Switching Logic
    const tabBtns = sectionEl.querySelectorAll('.fc-tab-btn');
    const tabPanels = sectionEl.querySelectorAll('.fc-tab-panel');

    tabBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Remove active class from all buttons and panels
        tabBtns.forEach(b => b.classList.remove('is-active'));
        tabPanels.forEach(p => p.classList.remove('is-active'));

        // Add active class to clicked button
        this.classList.add('is-active');

        // Show the corresponding panel
        const targetId = this.getAttribute('data-target');
        const targetPanel = sectionEl.querySelector('#' + targetId);
        if (targetPanel) {
          targetPanel.classList.add('is-active');
        }
      });
    });
  });
</script>

