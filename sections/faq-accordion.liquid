{%- comment -%}
  IMPROVEMENTS:
  1. CSS Animation: Changed the transition from 'height' to 'max-height' for better rendering performance.
     This reduces layout recalculations (reflows) during the animation, resulting in a smoother experience.
  2. JavaScript Logic: Updated the script to set 'max-height' based on the content's scrollHeight and simplified
     the class toggling for better readability and efficiency.
{%- endcomment -%}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if section.settings.use_custom_colors %}
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
      --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
      --color-border: {{ section.settings.colors_border.red }}, {{ section.settings.colors_border.green }}, {{ section.settings.colors_border.blue }};
      --color-icon: {{ section.settings.colors_icon.red }}, {{ section.settings.colors_icon.green }}, {{ section.settings.colors_icon.blue }};
      --inner-bg: {{ section.settings.inner_background_color }};
    {% endif -%}
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top_mob }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
  }

  .faq-section-{{ section.id }} {
    background: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }
  .faq-section-{{ section.id }} .section-heading {
    text-align: center;
    margin-bottom: 3rem;
  }
  .faq-section-{{ section.id }} .section-heading .h1 {
    margin: 0;
  }
  .faq-section-{{ section.id }} .faq-inner {
    max-width: {{ section.settings.content_max_width }}px;
    margin: 0 auto;
    background-color: var(--inner-bg, transparent);
    padding: 2rem 3rem;
    border-radius: {{ section.settings.inner_border_radius }}px;
  }
  .faq-section-{{ section.id }} .faq-item {
    border-bottom: 1px solid rgba(var(--color-border, 0, 0, 0), 0.1);
  }
  .faq-section-{{ section.id }} .faq-item:last-child {
    border-bottom: 0;
  }
  .faq-section-{{ section.id }} .faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.8rem 0;
    background: transparent;
    border: 0;
    text-align: left;
    cursor: pointer;
    font-family: var(--font-heading-family);
    font-size: 1.6rem;
    font-weight: 500;
    letter-spacing: 0;
    color: rgb(var(--color-foreground));
  }
  .faq-section-{{ section.id }} .faq-question:hover {
    opacity: 0.85;
  }
  .faq-section-{{ section.id }} .faq-question-text {
    flex: 1;
    padding-right: 2rem;
  }
  .faq-section-{{ section.id }} .faq-icon {
    flex-shrink: 0;
    width: 1.1rem;
    height: 0.7rem;
    display: flex;
    align-items: center;
  }
  .faq-section-{{ section.id }} .faq-icon svg {
    width: 100%;
    height: 100%;
    fill: rgb(var(--color-icon, 28, 28, 28));
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  .faq-section-{{ section.id }} .faq-item.active .faq-icon svg {
    transform: rotate(180deg);
  }
  .faq-section-{{ section.id }} .faq-answer {
    overflow: hidden;
    max-height: 0; /* IMPROVEMENT: Changed from height for performance */
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1); /* IMPROVEMENT: Transitioning max-height */
  }
  .faq-section-{{ section.id }} .faq-answer-inner {
    padding-bottom: 2rem;
  }
  .faq-section-{{ section.id }} .faq-answer-text {
    font-size: 1.4rem;
    line-height: 1.6;
    color: rgba(var(--color-foreground), 0.8);
  }

  @media screen and (max-width: 749px) {
    .faq-section-{{ section.id }} .faq-inner {
      padding: 1.5rem;
    }
    .faq-section-{{ section.id }} .faq-question {
      padding: 1.5rem 0;
      font-size: 1.4rem;
    }
    .faq-section-{{ section.id }} .faq-answer-text {
      font-size: 1.3rem;
    }
  }
{%- endstyle -%}

<div class="faq-section faq-section-{{ section.id }}">
  <div class="section--padding">
    <div class="page-width">
      
      {%- if section.settings.heading != blank -%}
        <div class="section-heading">
          <h2 class="h1">{{ section.settings.heading }}</h2>
        </div>
      {%- endif -%}

      <div class="faq-inner">
        {%- for block in section.blocks -%}
          <div class="faq-item {% if section.settings.open_first_by_default and forloop.first %}active{% endif %}" data-faq-item {{ block.shopify_attributes }}>
            <button class="faq-question" type="button" aria-expanded="{% if section.settings.open_first_by_default and forloop.first %}true{% else %}false{% endif %}">
              <span class="faq-question-text">{{ block.settings.question }}</span>
              <span class="faq-icon">
                <svg width="11" height="7" viewBox="0 0 11 7" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9.08399 0.2808L5.35919 4.0056L1.6344 0.2808C1.26 -0.0936 0.6552 -0.0936 0.2808 0.2808C-0.0936 0.6552 -0.0936 1.26 0.2808 1.6344L4.68719 6.0408C5.06159 6.4152 5.66639 6.4152 6.04079 6.0408L10.4472 1.6344C10.8216 1.26 10.8216 0.6552 10.4472 0.2808C10.0728 -0.084 9.45839 -0.0936 9.08399 0.2808Z" fill="currentColor"/>
                </svg>
              </span>
            </button>
            <div class="faq-answer">
              <div class="faq-answer-inner">
                <div class="faq-answer-text">{{ block.settings.answer }}</div>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  /* IMPROVEMENT: Updated script for max-height animation */
  (function() {
    const faqItems = document.querySelectorAll('.faq-section-{{ section.id }} [data-faq-item]');
    
    faqItems.forEach(item => {
      const button = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      
      // Initialize max-height for default open items
      if (item.classList.contains('active')) {
        answer.style.maxHeight = answer.scrollHeight + 'px';
      }

      button.addEventListener('click', function() {
        const isActive = item.classList.toggle('active');
        button.setAttribute('aria-expanded', isActive);
        
        if (isActive) {
          answer.style.maxHeight = answer.scrollHeight + 'px';
        } else {
          answer.style.maxHeight = '0';
        }
      });
    });
  })();
</script>

{% schema %}
{
