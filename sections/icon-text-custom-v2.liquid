{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --icon-size-desktop: {{ section.settings.icon_size_desktop }}px;
    --icon-size-mobile: {{ section.settings.icon_size_mobile }}px;
    {%- if section.settings.use_custom_colors %}
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
      --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
      --color-heading: var(--color-foreground);
    {% endif -%}
  }

  .icon-text-custom-v2-section .icon-text-wrapper {
    background: rgb(var(--color-background));
    background: var(--gradient-background);
  }
  .icon-text-custom-v2-section .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  .icon-text-custom-v2-section .section-header h2 {
    font-size: 2.92rem;
    line-height: 1.24;
    letter-spacing: 0.9px; 
    margin: 0;
    color: rgb(var(--color-foreground));
  }
  .icon-text-custom-v2-section .section-header p {
    font-size: 1.5rem;
    color: rgb(var(--color-foreground));
    margin-block: 1rem 0;
  }
  .icon-text-custom-v2-section .icon-text-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.column_gap }}px;
    /* max-width: 110rem; */
    margin-inline: auto;
  }
  .icon-text-custom-v2-section .icon-text-item {
    text-align: {{ section.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    align-items: {{ section.settings.text_alignment }};
  }
  .icon-text-custom-v2-section .icon-wrapper {
    width: var(--icon-size-desktop);
    height: var(--icon-size-desktop);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    flex-shrink: 0;
    {% if section.settings.use_icon_background %}
      border-radius: {{ section.settings.icon_border_radius }}%;
      background: {{ section.settings.icon_background_color }};
      padding: {{ section.settings.icon_padding }}px;
    {% endif %}
  }
  .icon-text-custom-v2-section .icon-wrapper svg {
    {% if section.settings.use_icon_background %}
      width: 100%;
      height: 100%;
    {% else %}
      width: 100%;
      height: 100%;
    {% endif %}
    color: {{ section.settings.icon_color }};
  }
  .icon-text-custom-v2-section .icon-wrapper img {
    {% if section.settings.use_icon_background %}
      width: 100%;
      height: 100%;
    {% else %}
      width: 100%;
      height: 100%;
    {% endif %}
    object-fit: contain;
  }
  .icon-text-custom-v2-section .icon-text-content h3 {
    font-size: 2rem;
    font-weight: 600;
    margin-block: 0 1rem;
    color: rgb(var(--color-foreground));
  }
  .icon-text-custom-v2-section .icon-text-content p {
    font-size: 1.6rem;
    color: rgb(var(--color-foreground));
    /* opacity: 0.75; */
    line-height: 1.6;
    letter-spacing: 0.7px;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .icon-text-custom-v2-section .section-header h2 {
      font-size: 3.9rem;
    }
    .icon-text-custom-v2-section .section-header p {
      font-size: 1.6rem;
    }
  }

  @media screen and (max-width: 989px) {
    .icon-text-custom-v2-section .section-header {
      margin-bottom: 1.5rem;
    }
    .icon-text-custom-v2-section .icon-text-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 2rem 2.5rem;
    }
    .icon-text-custom-v2-section .icon-text-item {
      align-items: center;
      text-align: center;
    }
    .icon-text-custom-v2-section .icon-wrapper {
      width: var(--icon-size-mobile);
      height: var(--icon-size-mobile);
      margin-bottom: 1.2rem;
    }
    .icon-text-custom-v2-section .icon-text-content h3 {
      font-size: 1.8rem;
    }
    .icon-text-custom-v2-section .icon-text-content p {
      font-size: 1.5rem;
    }
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top_mob }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
  }
{%- endstyle -%}

{% if section.settings.enable_top_wave %}<img src="https://cdn.shopify.com/s/files/1/0872/8906/9899/files/wave_2.svg?v=1769760888" width="" height="" class="wave-bg-top" alt="Wave background">{% endif %}
<div class="icon-text-custom-v2-section">
  <div class="icon-text-wrapper">
    <div class="section--padding">
      <div class="page-width">
        
        {%- if section.settings.heading != blank or section.settings.description != blank -%}
        <div class="section-header">
          {%- if section.settings.heading != blank -%}
            <h2>{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <p>{{ section.settings.description }}</p>
          {%- endif -%}
        </div>
        {%- endif -%}

        <div class="icon-text-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'icon_item' -%}
              <div class="icon-text-item" {{ block.shopify_attributes }}>
                <div class="icon-wrapper">
                  {%- if block.settings.icon_image != blank -%}
                    {{ block.settings.icon_image | image_url: width: 200 | image_tag: loading: 'lazy', alt: block.settings.heading }}
                  {%- elsif block.settings.icon_svg != blank -%}
                    {{ block.settings.icon_svg }}
                  {%- else -%}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  {%- endif -%}
                </div>
                <div class="icon-text-content">
                  {%- if block.settings.heading != blank -%}
                    <h3>{{ block.settings.heading }}</h3>
                  {%- endif -%}
                  {%- if block.settings.text != blank -%}
                    <p>{{ block.settings.text }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

      </div>
    </div>
  </div>
</div>

