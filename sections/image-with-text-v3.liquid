{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if section.settings.image != blank %}
      --image-ratio-percent: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
      --image-position: {{ section.settings.image_position }};
    {% elsif section.settings.video != null %}
      {% assign poster = section.settings.video.preview_image %}
      --image-ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;
    {% elsif section.settings.video_url != blank %}
      --image-ratio-percent: 100%;
    {% endif -%}
    {%- if section.settings.use_custom_colors %}
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
      --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
      --color-link: var(--color-foreground);
      --color-border: var(--color-foreground);
      --color-heading: var(--color-foreground);
      --color-button-background: {{ section.settings.colors_button_background.red }}, {{ section.settings.colors_button_background.green }}, {{ section.settings.colors_button_background.blue }};
      --color-button-text: {{ section.settings.colors_button_label.red }}, {{ section.settings.colors_button_label.green }}, {{ section.settings.colors_button_label.blue }};
      --color-button-border: var(--color-button-background);
      --color-shadow: var(--color-foreground);
    {% endif -%}
    --shadow-opacity: 0.3;
    --color-highlight: {{ section.settings.colors_highlight.red }}, {{ section.settings.colors_highlight.green }}, {{ section.settings.colors_highlight.blue }};
  }

  {%- if section.settings.image_mobile != blank and section.settings.mobile_image_ratio == 'adapt' %}
    @media screen and (max-width: 749px) {
      #shopify-section-{{ section.id }} {
        --image-ratio-percent: {{ 1 | divided_by: section.settings.image_mobile.aspect_ratio | times: 100 }}%;
      }
    }
  {% endif -%}

  {% if section.settings.enable_media_radius %}
    #shopify-section-{{ section.id }} .image-with-text-v3 .image-animate,
    #shopify-section-{{ section.id }} .image-with-text-v3 .image-animate img {
      border-radius: {{ section.settings.media_radius }}px;
    }
  {% endif %}

  #shopify-section-{{ section.id }} .image-with-text-v3 .image-with-text__heading {
    line-height: 1.24;
    letter-spacing: 0.9px;
  }
  #shopify-section-{{ section.id }} .image-with-text-v3 .image-with-text__heading.h1 {
    font-size: 3.9rem;
  }
  #shopify-section-{{ section.id }} .image-with-text-v3 .image-with-text__text {
    line-height: 1.8;
    letter-spacing: 0.9px;
    color: rgba(var(--color-foreground),1);
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} .section--padding {
      padding-top: {{ section.settings.padding_top_mob }}px;
      padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
    #shopify-section-{{ section.id }} .image-with-text__grid-mobile--reverse .image-with-text__content {
      padding-top: 0;
      padding-bottom: 2rem;
    }
    #shopify-section-{{ section.id }} .image-with-text__grid:not(.image-with-text__grid-mobile--reverse) .image-with-text__content {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    #shopify-section-{{ section.id }} .image-with-text-v3 .image-with-text__heading {
      line-height: 1.22;
      letter-spacing: 0.75px;
    }
    #shopify-section-{{ section.id }} .image-with-text-v3 .image-with-text__heading.h1 {
      font-size: 2.92rem;
    }
  }

/* --- New styles for Icon with Text block --- */
.icon-grid-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2.5rem 2rem;
  margin-top: 3rem !important;
}
.icon-grid-item__icon {
  width: auto;
  height: auto;
  max-height: 4rem;
  margin-bottom: 0.5rem;
}
.icon-grid-item__heading {
  font-size: 1.4rem;
  font-weight: 500;
  margin: 0 0 0.5rem;
}
.icon-grid-item__text p {
  margin: 0;
  font-size: 1.2rem;
  letter-spacing: 0;
}
/* When Check list */
.image-with-text-v3 .checklist-wrapper {
  width: 100%;
  list-style: none;
  border-radius: 5px;
  margin: 2rem 0;
  padding: 0;
}
.image-with-text-v3 .checklist-wrapper.bg-wr {
  width: 100%;
  padding: 1rem 1.5rem;
}
.image-with-text-v3 .checklist-item {
  display: flex;
  align-items: center;
  gap: 0.7rem;
  margin-bottom: 3rem;
}
.image-with-text-v3 .checklist-item:last-child {
  margin-bottom: 0;
}
.image-with-text-v3 .checklist-wrapper.bg-wr .checklist-item {
  margin-bottom: 0.5rem;
}
.image-with-text-v3 .checklist-wrapper.bg-wr .checklist-item:last-child {
  margin-bottom: 0;
}
.image-with-text-v3 .checklist-icon {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}
.image-with-text-v3 .checklist-icon img {
  width: 3.1rem;
  height: 3.1rem;
  object-fit: contain;
}
.image-with-text-v3 .checklist-wrapper.bg-wr .checklist-icon img {
  width: 1.8rem;
  height: 1.8rem;
}
.image-with-text-v3 .checklist-text {
  font-size: 2.6rem;
  line-height: 1.3;
  letter-spacing: 0.95px;
  text-align: left;
}
.image-with-text-v3 .checklist-wrapper.bg-wr .checklist-text {
  font-size: 1.6rem;
}

@media screen and (min-width: 750px) {
  .image-with-text-v3 .flex-grid__item:has(use-animate) {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
}

@media screen and (max-width: 749px) {
  .icon-grid-wrapper {
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 2.5rem !important;
  }
  .icon-grid-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  .icon-grid-item__icon {
    max-width: 4rem;
  }
  .image-with-text-v3 .checklist-item {
    display: flex;
    align-items: center;
    gap: 0.55rem;
    margin-bottom: 2.2rem;
  }
  .image-with-text-v3 .checklist-icon img {
    width: 2.1rem;
    height: 2.1rem;
    object-fit: contain;
  }
  .image-with-text-v3 .checklist-wrapper.bg-wr .checklist-icon img {
    width: 1.6rem;
    height: 1.6rem;
  }
  .image-with-text-v3 .checklist-text {
    font-size: 1.8rem;
  }
  .image-with-text-v3 .checklist-wrapper.bg-wr .checklist-text {
    font-size: 1.4rem;
  }
}
{%- endstyle -%}

{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-deferred-media.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}</noscript>

{%- liquid
  assign grid_class = 'image-with-text__grid'
  if section.settings.layout == 'text_first'
    assign grid_class = grid_class | append: ' image-with-text__grid--reverse'
  endif
  if section.settings.mobile_layout == 'text_first'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--reverse'
  endif
  if section.settings.mobile_layout == 'no_image'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--no-image'
  endif
  if section.settings.mobile_layout == 'overlap'
    assign grid_class = grid_class | append: ' image-with-text__grid-mobile--overlap'
  endif
-%}

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
  <div class="image-with-text image-with-text-v3{% if section.settings.use_custom_colors and section.settings.colors_background != settings.colors_background %} image-with-text--colored{% else %} image-with-text--alt{% endif %}{% if section.settings.enlarge_content %} image-with-text--enlarge{% endif %} page-width{% if section.settings.full_width %} page-width--full-width{% endif %}">
    <div class="{{ grid_class }} flex-grid flex-grid--gapless flex-grid--1-col flex-grid--2-col-tablet">
      <div class="flex-grid__item">
        {% if section.settings.video == blank and section.settings.video_url == blank %}
        <use-animate data-animate="zoom-fade" class="media-wrapper">
          <div class="image-animate media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }} {% if section.settings.image != blank %}media{% else %}media--placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
            {%- if section.settings.image != blank -%}
              {%- if section.settings.image_behavior == 'ambient' -%}
                {%- assign widths = '450, 900, 1320, 1800, 2136, 2400, 3600, 4680' -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
                  (min-width: 750px) calc((100vw - 10rem) / 1.667), {% if section.settings.full_width %} calc(100vw / 1.667){% else %} calc((100vw - 3rem) / 1.667){% endif %}
                {%- endcapture -%}
              {%- else -%}
                {%- assign widths = '375, 750, 1100, 1500, 1780, 2000, 3000, 3840' -%}
                {%- capture sizes -%}
                  (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                  (min-width: 750px) calc((100vw - 10rem) / 2), {% if section.settings.full_width %} 50vw{% else %} calc((100vw - 3rem) / 2){% endif %}
                {%- endcapture -%}
              {%- endif -%}
              {%- liquid
                if section.settings.image_mobile == blank
                  echo section.settings.image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'image-fit', sizes: sizes, widths: widths, is: 'lazy-image'
                else
                  echo section.settings.image_mobile | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'image-fit medium-hide large-up-hide', sizes: sizes, widths: widths, is: 'lazy-image'
                  echo section.settings.image | image_url: width: 3840 | image_tag: loading: 'lazy', class: 'image-fit small-hide', sizes: sizes, widths: widths, is: 'lazy-image'
                endif
              -%}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder' }}
            {%- endif -%}
          </div>
        </use-animate>
        {%  else %}
        {% comment %} VIDEO PART {% endcomment %}
        <div class="image-with-text--video image-animate media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}">
          {%- liquid
            assign video_id = section.settings.video.id | default: section.settings.video_url.id
            assign video_alt = section.settings.video.alt | default: default: section.settings.description
            assign alt = 'sections.video.load_video' | t: description: video_alt | escape
            assign poster =  section.settings.image | default: section.settings.video.preview_image
            if section.settings.image_mobile != blank
            assign poster_mobile =  section.settings.image_mobile | default: section.settings.video.preview_image
            else
            assign poster_mobile =  section.settings.image | default: section.settings.video.preview_image
            endif
            if section.settings.video != null and poster != null
              assign ratio_diff = section.settings.video.aspect_ratio | minus: poster.aspect_ratio | abs
              if ratio_diff < 0.01 and ratio_diff > 0
                assign fix_ratio = true
              endif
            endif
          -%}
          <noscript>
            <div class="image-with-text-video-section__media">
              {%- if section.settings.video == null and section.settings.video_url != null -%}
                <a href="{{ section.settings.video_url }}" class="card-wrapper">
                  <div class="card deferred-media__poster">
                    <span class="deferred-media__poster-button motion-reduce">
                      {%- render 'icon', icon: 'play' -%}
                    </span>

                    <div class="media media--{{ section.settings.image_ratio }} media-mobile--{{ section.settings.mobile_image_ratio }}">
                      {%- if poster != null -%}
                        {{ poster | image_url: width: 3840 | image_tag:
                          loading: 'lazy',
                          class: 'image-fit medium-hide large-up-hide',
                          sizes: sizes,
                          widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                        }}
                        {{ poster_mobile | image_url: width: 3840 | image_tag:
                          loading: 'lazy',
                          class: 'image-fit small-hide',
                          sizes: sizes,
                          widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                        }}
                      {%- else -%}
                        {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder collage-card__image' }}
                      {%- endif -%}
                    </div>
                  </div>
                </a>
              {%- else -%}
                {{ section.settings.video | video_tag:
                  image_size: "1100x",
                  loop: section.settings.enable_video_looping,
                  controls: true,
                  muted: false
                }}
              {%- endif -%}
            </div>
          </noscript>
          <deferred-media class="card-wrapper deferred-media no-js-hidden media-wrapper media-wrapper--large{% if fix_ratio %} media-fit-cover{% endif %}"
              data-media-id="{{ video_id }}">
            <button
              id="Deferred-Poster-{{ section.settings.video_url.id }}"
              class="card deferred-media__poster"
              type="button"
            >
              <span class="deferred-media__poster-button motion-reduce">
                {%- render 'icon', icon: 'play' -%}
              </span>
              <use-animate data-animate="zoom-fade-small" class="media-wrapper">
                {%- if poster != blank -%}
                  {%- assign alt = 'sections.video.load_video' | t: description: section.settings.description | escape -%}
                  {{ poster | image_url: width: 3840 | image_tag:
                    loading: 'lazy',
                    class: 'image-fit medium-hide large-up-hide',
                    sizes: sizes,
                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                    alt: alt,
                    is: 'lazy-image'
                  }}
                  {{ poster_mobile | image_url: width: 3840 | image_tag:
                    loading: 'lazy',
                    class: 'image-fit small-hide',
                    sizes: sizes,
                    widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                    alt: alt,
                    is: 'lazy-image'
                  }}
                {%- else -%}
                  {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder collage-card__image' }}
                {%- endif -%}
              </use-animate>
            </button>
            <template>
              {%- if section.settings.video == null and section.settings.video_url != null -%}
                <video-section
                  data-init-mode="template"
                  data-parent="deferred-media"
                  data-loop="{% if section.settings.enable_video_looping %}1{% else %}0{% endif %}"
                  data-type="{{ section.settings.video_url.type }}"
                  data-video-id="{{ section.settings.video_url.id }}"></video-section>
              {%- else -%}
                {{ section.settings.video | video_tag:
                  image_size: "1100x",
                  autoplay: true,
                  loop: section.settings.enable_video_looping,
                  controls: true,
                  muted: false
                }}
              {%- endif -%}
            </template>
          </deferred-media>
        </div>
        {% endif %}
      </div>
      <div class="flex-grid__item">
        <div class="image-with-text__content {{ section.settings.text_box_position }} {{ section.settings.text_alignment }} mobile-{{ section.settings.mobile_text_alignment }}">
          {%- for block in section.blocks -%}
            {%- if block.type != 'icon_with_text' -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <{{ block.settings.heading_tag }} class="image-with-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                    {%- render 'highlight-text',
                      hl_input: block.settings.heading,
                      hl_style: block.settings.highlight_style,
                      hl_enable: block.settings.enable_highlight,
                      hl_animateWrap: true -%}
                  </{{ block.settings.heading_tag }}>
                {%- when 'subheading' -%}
                  <p class="image-with-text__subheading{% if block.settings.secondary_color %} image-with-text__subheading--colored{% endif %} {{ block.settings.subheading_size }}" {{ block.shopify_attributes }}>
                    {%- render 'highlight-text',
                      hl_input: block.settings.subheading,
                      hl_style: block.settings.highlight_style,
                      hl_enable: block.settings.enable_highlight,
                      hl_animateWrap: true -%}
                  </p>
                {%- when 'text' -%}
                  <div class="image-with-text__text{% if block.settings.secondary_color %} image-with-text__text--colored{% endif %} {{ block.settings.text_size }} rte" {{ block.shopify_attributes }}>
                    {%- render 'highlight-text',
                      hl_input: block.settings.text,
                      hl_style: block.settings.highlight_style,
                      hl_enable: block.settings.enable_highlight,
                      hl_animateWrap: true -%}
                  </div>
                {%- when 'check_list' -%}
                  <ul class="checklist-wrapper{% if block.settings.enable_bg %} bg-wr{% endif %}" {{ block.shopify_attributes }} style="background: {{ block.settings.bg }}">
                    {%- for i in (1..5) -%}
                      {%- capture text_id -%}list_text_{{ i }}{%- endcapture -%}
                      {%- assign list_text = block.settings[text_id] -%}

                      {%- if list_text != blank -%}
                        <li class="checklist-item">
                          {%- if block.settings.list_icon != blank -%}
                            <span class="checklist-icon">
                              <img src="{{ block.settings.list_icon | image_url: width: 40 }}" 
                                  alt="{{ block.settings.list_icon.alt | escape }}"
                                  loading="lazy"
                                  width="20"
                                  height="20">
                            </span>
                          {%- endif -%}
                          <span class="checklist-text">{{ list_text }}</span>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
                {%- when 'images_grid' -%}
                  <div class="image-with-text-images-grid" {{ block.shopify_attributes }}>
                    {% for i in (1..4) %}
                      {% assign image_id = 'image' | append: i %}
                      {% if block.settings[image_id] != blank %}
                        <img src="{{ block.settings[image_id] | image_url }}" width="100" height="100" alt="">
                      {% endif %}
                    {% endfor %}
                  </div>
                {%- when 'custom_liquid' -%}
                  <div class="image-with-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.custom_liquid }}</div>
                {%- when 'button' -%}
                  <div class="button-group">
                    {%- if block.settings.button_label != blank or block.settings.button_alt_label != blank -%}
                      {%- if block.settings.button_label != blank -%}
                        {%- if block.settings.button_style_secondary -%}
                          <a class="button button--cta button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                            <span class="label">{{ block.settings.button_label | escape }}</span>
                            {% render 'icon', icon: 'arrow' %}
                          </a>
                        {%- else -%}
                          <a class="button button--{{ block.settings.button_size }}"{% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                            {{ block.settings.button_label | escape }}
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                      {%- if block.settings.button_alt_label != blank -%}
                        {%- if block.settings.button_alt_style_secondary -%}
                          <a class="button button--cta button--{{ block.settings.button_size }}"{% if block.settings.button_alt_link != blank %} href="{{ block.settings.button_alt_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                            <span class="label">{{ block.settings.button_alt_label | escape }}</span>
                            {% render 'icon', icon: 'arrow' %}
                          </a>
                        {%- else -%}
                          <a class="button button--secondary button--{{ block.settings.button_size }}"{% if block.settings.button_alt_link != blank %} href="{{ block.settings.button_alt_link }}"{% else %} role="link" aria-disabled="true"{% endif %} {{ block.shopify_attributes }}>
                            {{ block.settings.button_alt_label | escape }}
                          </a>
                        {%- endif -%}
                      {%- endif -%}
                    {%- elsif section.blocks.size == 1 and block.settings.button_link != blank -%}
                      <a class="full-unstyled-link" href="{{ block.settings.button_link }}" {{ block.shopify_attributes }} aria-label="{{ block.settings.heading | default: block.settings.subheading | escape }}"></a>
                    {%- endif -%}
                  </div>
              {% endcase %}
            {%- endif -%}
          {%- endfor -%}

          <div class="icon-grid-wrapper">
            {%- for block in section.blocks -%}
              {%- if block.type == 'icon_with_text' -%}
                <div class="icon-grid-item" {{ block.shopify_attributes }}>
                  {%- if block.settings.icon_image != blank -%}
                    <img src="{{ block.settings.icon_image | image_url: width: 100 }}"
                         alt="{{ block.settings.icon_image.alt | default: block.settings.heading }}"
                         class="icon-grid-item__icon"
                         loading="lazy"
                         width="50"
                         height="50">
                  {%- endif -%}
                  <div class="icon-grid-content">
                    {%- if block.settings.heading != blank -%}
                      <h4 class="icon-grid-item__heading">{{ block.settings.heading }}</h4>
                    {%- endif -%}
                    {%- if block.settings.text != blank -%}
                      <div class="icon-grid-item__text rte">{{ block.settings.text }}</div>
                    {%- endif -%}
                  </div>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

