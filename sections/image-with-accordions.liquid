{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    
    {%- if section.settings.use_custom_colors %}
      --gradient-background: {% if section.settings.gradient_background != blank %}{{ section.settings.gradient_background }}{% else %}{{ section.settings.colors_background }}{% endif %};
      --color-background: {{ section.settings.colors_background.red }}, {{ section.settings.colors_background.green }}, {{ section.settings.colors_background.blue }};
      --color-foreground: {{ section.settings.colors_text.red }}, {{ section.settings.colors_text.green }}, {{ section.settings.colors_text.blue }};
    {% endif -%}
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top_mob }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
  }

  /* --- Custom Styles for Inner Content --- */
  
  /* Apply background to the main wrapper if custom colors are used */
  #shopify-section-{{ section.id }} .image-with-accordions-section {
    background: var(--gradient-background);
    background-color: rgb(var(--color-background));
    color: rgb(var(--color-foreground));
  }

  /* Header Styling */
  .cw-section-header {
    margin-bottom: 40px;
    max-width: 800px;
  }
  .cw-section-header.text-left { margin-right: auto; text-align: left; }
  .cw-section-header.text-center { margin-left: auto; margin-right: auto; text-align: center; }
  .cw-section-header.text-right { margin-left: auto; text-align: right; }

  .cw-section-header h2 {
    margin: 0 0 10px;
    color: rgb(var(--color-foreground));
    /* Optional: Inherit heading sizes from theme or set fixed */
    font-size: calc(var(--font-heading-scale) * 2.4rem); 
  }

  /* Grid Layout */
  .cw-faq-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 50px;
    align-items: start;
  }

  /* Image Column */
  .cw-image-wrapper {
    position: relative;
    border-radius: 20px; /* Rounded corners as per screenshot */
    overflow: hidden;
    line-height: 0;
  }
  .cw-image-wrapper img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Accordion Column */
  .cw-accordion-list {
    display: flex;
    flex-direction: column;
    border-top: 1px solid rgba(var(--color-foreground), 0.15);
  }

  .cw-accordion-item {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.15);
  }

  .cw-summary {
    list-style: none;
    padding: 20px 0;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    font-size: 1.1rem;
    color: rgb(var(--color-foreground));
  }
  .cw-summary::-webkit-details-marker { display: none; }

  /* Icon Animation */
  .cw-icon {
    width: 14px;
    height: 14px;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }
  details[open] .cw-icon {
    transform: rotate(180deg);
  }

  /* Content Animation */
  .cw-content {
    overflow: hidden;
    max-height: 0;
    opacity: 0;
    transition: max-height 0.4s ease, opacity 0.4s ease, padding 0.4s ease;
  }
  details[open] .cw-content {
    /* These are handled by JS, but defaults for no-js fallback */
    opacity: 1;
    padding-bottom: 20px;
  }

  /* Mobile */
  @media screen and (max-width: 768px) {
    .cw-faq-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
{%- endstyle -%}

<div class="image-with-accordions-section">
  <div class="section--padding">
    <div class="page-width">
      
      {%- comment -%} Header Section {%- endcomment -%}
      {%- if section.settings.heading != blank or section.settings.description != blank -%}
        <div class="cw-section-header text-{{ section.settings.header_alignment }}">
          {%- if section.settings.heading != blank -%}
            <h2 class="h2">{{ section.settings.heading }}</h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <div class="rte">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- comment -%} Main Content Grid {%- endcomment -%}
      <div class="cw-faq-grid">
        
        <div class="cw-image-column">
          <div class="cw-image-wrapper">
            {%- if section.settings.image != blank -%}
              {{ section.settings.image | image_url: width: 800 | image_tag: 
                loading: 'lazy', 
                sizes: '(min-width: 768px) 50vw, 100vw',
                widths: '375, 550, 750, 1100'
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        </div>

        <div class="cw-accordion-column">
          <div class="cw-accordion-list">
            {%- for block in section.blocks -%}
              <details class="cw-accordion-item" {{ block.shopify_attributes }}>
                <summary class="cw-summary">
                  <span>{{ block.settings.heading | escape }}</span>
                  <span class="cw-icon">
                    <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6" style="width: 14px; height: auto; display: block; fill: currentColor;">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"></path>
                    </svg>
                  </span>
                </summary>
                <div class="cw-content">
                  <div class="rte" style="padding-bottom: 20px;">
                    {{ block.settings.text }}
                  </div>
                </div>
              </details>
            {%- endfor -%}
          </div>
        </div>

      </div>

    </div>
  </div>
</div>

<script>
  // Simple vanilla JS for smooth accordion animation
  document.addEventListener('DOMContentLoaded', function() {
    const sectionContainer = document.querySelector('#shopify-section-{{ section.id }}');
    if (!sectionContainer) return;

    const details = sectionContainer.querySelectorAll('details');

    details.forEach((targetDetail) => {
      const summary = targetDetail.querySelector('summary');
      const content = targetDetail.querySelector('.cw-content');

      summary.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent default instant toggle

        // Optional: Close others when opening one (Accordion behavior)
        const isClosing = targetDetail.hasAttribute('open');
        
        // Close all others
        details.forEach((otherDetail) => {
          if (otherDetail !== targetDetail && otherDetail.hasAttribute('open')) {
            closeAccordion(otherDetail);
          }
        });

        // Toggle current
        if (isClosing) {
          closeAccordion(targetDetail);
        } else {
          openAccordion(targetDetail);
        }
      });
    });

    function openAccordion(el) {
      const content = el.querySelector('.cw-content');
      el.setAttribute('open', '');
      
      // Wait for browser to acknowledge attribute change
      requestAnimationFrame(() => {
        // Calculate the height needed
        const height = content.scrollHeight;
        content.style.maxHeight = height + 'px';
        content.style.opacity = '1';
      });
    }

    function closeAccordion(el) {
      const content = el.querySelector('.cw-content');
      content.style.maxHeight = '0px';
      content.style.opacity = '0';
      
      // Remove open attribute after transition finishes (400ms match css)
      setTimeout(() => {
        el.removeAttribute('open');
      }, 400);
    }
  });
</script>

