{%- style -%}
  #shopify-section-{{ section.id }} {
    --color-highlight: {{ section.settings.colors_highlight.red }}, {{ section.settings.colors_highlight.green }}, {{ section.settings.colors_highlight.blue }};
  }
{%- endstyle -%}
{{ 'section-timeline.css' | asset_url | stylesheet_tag }}

<script type="module">
  import "timeline-component";
</script>

<section id="Timeline-{{ section.id }}" class="timeline-section" data-section-id="{{ section.id }}">
  <timeline-component 
    data-height="{{ section.settings.section_height }}"
    data-animation-speed="{{ section.settings.animation_speed }}"
    data-show-dots="{{ section.settings.show_timeline_dots }}"
    data-timeline-bg="{{ section.settings.timeline_background_color }}"
    data-content-bg="{{ section.settings.content_background_color }}"
    data-accent-color="{{ section.settings.accent_color }}"
    data-date-color="{{ section.settings.date_color }}"
    data-text-color="{{ section.settings.text_color }}"
    data-date-size="{{ section.settings.date_size }}"
    data-text-size="{{ section.settings.text_size }}"
    data-enable-padding="{{ section.settings.enable_image_padding }}"
  >
    <div class="timeline-container">
      {%- comment -%} Left Panel - Timeline {%- endcomment %}
      <div class="timeline-panel">
        {% if section.settings.show_timeline_dots %}
          <div class="timeline-bar">
            <div class="timeline-dot"></div>
          </div>
        {% endif %}
        
        <div class="timeline-content">
          {% for block in section.blocks %}
            <div class="timeline-item" data-slide="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
              {% if block.settings.date != blank %}
                <div class="timeline-date {{ section.settings.date_size }}">
                  {%- render 'highlight-text', 
                    hl_input: block.settings.date, 
                    hl_style: block.settings.highlight_style,
                    hl_enable: block.settings.enable_highlight,
                    hl_animateWrap: true -%}
                </div>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="timeline-text {{ section.settings.text_size }}">
                  {%- render 'highlight-text', 
                    hl_input: block.settings.text, 
                    hl_style: block.settings.highlight_style,
                    hl_enable: block.settings.enable_highlight,
                    hl_animateWrap: true -%}
                  {% if block.settings.source_link != blank and block.settings.source_text != blank %}
                    <a href="{{ block.settings.source_link }}" class="source-link" target="_blank" rel="noopener">
                      ({{ block.settings.source_text }})
                    </a>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
      
      {%- comment -%} Right Panel - Content {%- endcomment -%}
      <div class="content-panel">
        {% for block in section.blocks %}
          <div class="slide" data-slide="{{ forloop.index0 }}">
            {% if block.settings.image != blank %}
              {% assign image_alt = block.settings.image_alt | default: block.settings.text %}
              {%- assign widths = '375, 750, 1100, 1500, 1780, 2000, 3000, 3840' -%}
              {%- capture sizes -%}
                (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                (min-width: 750px) calc((100vw - 10rem) / 2), calc((100vw - 3rem) / 2)
              {%- endcapture -%}
              {{ block.settings.image | image_url: width: 3840 | image_tag: loading: 'lazy', alt: image_alt, sizes: sizes, widths: widths, is: 'lazy-image' }}
            {% else %}
              <div class="slide-placeholder">
                {{ 'image' | placeholder_svg_tag: 'placeholder' }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </timeline-component>
</section>

