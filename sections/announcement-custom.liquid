{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    --announcement-bg-color: {{ section.settings.background_color }};
    --announcement-text-color: {{ section.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      --section-padding-top: {{ section.settings.padding_top_mob }}px;
      --section-padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
  }
{%- endstyle -%}

<div class="announcement-custom">
  <div class="announcement-custom__wrapper" style="background-color: var(--announcement-bg-color); color: var(--announcement-text-color);">
    <div class="page-width">
      <div class="announcement-custom__content">
        {%- if section.settings.show_icon -%}
          <div class="announcement-custom__icon">
            {%- if section.settings.icon_image != blank -%}
              <img 
                src="{{ section.settings.icon_image | image_url: width: 200 }}" 
                alt="{{ section.settings.icon_image.alt | escape }}"
                width="{{ section.settings.icon_width }}"
                height="auto"
                loading="lazy"
              >
            {%- endif -%}
          </div>
        {%- endif -%}
        
        <div class="announcement-custom__text">
          {{ section.settings.announcement_text }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .announcement-custom__wrapper {
    padding: var(--section-padding-top) 0 var(--section-padding-bottom);
  }
  .announcement-custom__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    text-align: center;
  }
  .announcement-custom__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .announcement-custom__icon img {
    width: {{ section.settings.icon_width }}px;
    height: auto;
    display: block;
  }
  .announcement-custom__text {
    font-size: {{ section.settings.font_size }}px;
    font-weight: {{ section.settings.font_weight }};
    line-height: 1.3;
    letter-spacing: .1rem;
    margin: 0;
  }
  .announcement-custom__text p {
    margin: 0;
  }
  .announcement-custom__text strong {
    font-weight: 700;
  }

  @media screen and (max-width: 749px) {
    .announcement-custom__content {
      flex-direction: {{ section.settings.mobile_layout }};
      gap: 0.5rem;
    }
    .announcement-custom__icon img {
      width: {{ section.settings.icon_width_mobile }}px;
    }
    .announcement-custom__text {
      font-size: {{ section.settings.font_size_mobile }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Announcement Custom",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Icon Settings"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "default": true,
      "label": "Show icon"
    },
    {
      "type": "image_picker",
      "id": "icon_image",
      "label": "Icon image",
      "info": "Upload an SVG or PNG image for the icon"
    },
    {
      "type": "range",
      "id": "icon_width",
      "min": 50,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Icon width (desktop)",
      "default": 100
    },
    {
      "type": "range",
      "id": "icon_width_mobile",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Icon width (mobile)",
      "default": 80
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "richtext",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "<p>50,000+ five star reviews globally</p>"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Font size (desktop)",
      "default": 14
    },
    {
      "type": "range",
      "id": "font_size_mobile",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Font size (mobile)",
      "default": 12
    },
    {
      "type": "select",
      "id": "font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#6B7B4C"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Mobile layout",
      "options": [
        {
          "value": "row",
          "label": "Horizontal"
        },
        {
          "value": "column",
          "label": "Vertical"
        }
      ],
      "default": "row"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top padding (desktop)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding (desktop)",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top padding (mobile)",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom padding (mobile)",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Announcement Custom"
    }
  ]
}
{% endschema %}