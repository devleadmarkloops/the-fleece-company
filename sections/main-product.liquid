<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    // 1. Initialize Swiper for Complementary Products
    function initComplementarySwiper() {
      const swiperContainer = document.querySelector('.complementary-swiper');
      if(swiperContainer) {
        new Swiper(swiperContainer, {
          slidesPerView: 1,
          spaceBetween: 10,
          navigation: {
            nextEl: '.comp-next',
            prevEl: '.comp-prev',
          },
        });
      }
    }

    // 2. Handle Variant Selection
    function initVariantSelectors() {
      const selectors = document.querySelectorAll('.com-options-d5');
      
      selectors.forEach(select => {
        select.addEventListener('change', function() {
          const container = this.closest('.card-information');
          // Find the sibling product form within the same card
          const form = container.querySelector('product-form'); 
          if(!form) return;

          const options = container.querySelectorAll('.com-options-d5');
          const hiddenDataSelect = form.querySelector('.com-variant-data-d5');
          const hiddenInput = form.querySelector('.com-final-id');
          const btn = form.querySelector('.com-btn-d5');
          const cardImg = this.closest('.card-wrapper').querySelector('.upsell-img-d5');

          // Build the Variant Title: "Option1 / Option2"
          let selectedValues = [];
          options.forEach(opt => selectedValues.push(opt.value));
          const targetTitle = selectedValues.join(' / ');

          // Find matching variant in hidden data
          let matchedOption = null;
          Array.from(hiddenDataSelect.options).forEach(opt => {
            if(opt.text === targetTitle) {
              matchedOption = opt;
            }
          });

          if(matchedOption) {
            // Update Hidden ID
            hiddenInput.value = matchedOption.value;
            
            // Update Image (if variant has one)
            if(matchedOption.dataset.img && cardImg) {
              cardImg.src = matchedOption.dataset.img;
              cardImg.srcset = matchedOption.dataset.img; // Simple fix for srcset
            }

            // Update Button State
            if(matchedOption.dataset.sold === "true") {
              btn.textContent = "Sold Out";
              btn.disabled = true;
              btn.classList.add('disabled');
            } else {
              btn.textContent = "Add to Cart";
              btn.disabled = false;
              btn.classList.remove('disabled');
            }
          } else {
            // Variant doesn't exist (e.g. invalid combination)
            btn.textContent = "Unavailable";
            btn.disabled = true;
          }
        });
      });
    }

    // Initialize functions
    initComplementarySwiper();
    initVariantSelectors();
    
    // Re-init if section reloads in customizer
    document.addEventListener('shopify:section:load', function() {
      initComplementarySwiper();
      initVariantSelectors();
    });
  });
</script>
