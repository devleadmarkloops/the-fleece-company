    /**
     * Sticky Cart Footer Spacer
     * Adds dynamic spacing to footer when sticky add to cart appears
     */

    (function () {
      'use strict';

      const STICKY_CART_SELECTOR = '.sticky-cart-wrapper';
      const FOOTER_SELECTOR = 'footer, .footer, [role="contentinfo"]';
      const SPACER_ID = 'sticky-cart-footer-spacer';
      const CHECK_INTERVAL = 100; // ms
      const TRANSITION_DURATION = 300; // ms

      let stickyCart = null;
      let footer = null;
      let spacer = null;
      let observer = null;
      let resizeTimeout = null;

      function init() {
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', setup);
        } else {
          setup();
        }
      }

      function setup() {
        stickyCart = document.querySelector(STICKY_CART_SELECTOR);
        footer = document.querySelector(FOOTER_SELECTOR);

        if (!stickyCart || !footer) {
          console.warn('Sticky cart or footer not found. Retrying...');
          setTimeout(setup, 500);
          return;
        }

        createSpacer();
        observeStickyCart();
        handleResize();

        updateSpacerHeight();
      }

      function createSpacer() {
        const existingSpacer = document.getElementById(SPACER_ID);
        if (existingSpacer) {
          existingSpacer.remove();
        }

        spacer = document.createElement('div');
        spacer.id = SPACER_ID;
        spacer.style.cssText = `
        height: 0px;
        transition: height ${TRANSITION_DURATION}ms ease-in-out;
        width: 100%;
        display: block !important;
        visibility: visible !important;
        opacity: 1 !important;
      `;

        footer.appendChild(spacer);
      }

      function observeStickyCart() {
        observer = new MutationObserver((mutations) => {
          mutations.forEach((mutation) => {
            if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
              console.log('Class changed on sticky cart');
              updateSpacerHeight();
            }
          });
        });

        observer.observe(stickyCart, {
          attributes: true,
          attributeFilter: ['class', 'style'],
        });

        const stickyCartInner = stickyCart.querySelector('.product-sticky-cart, .sticky-cart');
        if (stickyCartInner) {
          const innerObserver = new MutationObserver(() => {
            console.log('Inner sticky cart changed');
            updateSpacerHeight();
          });
          innerObserver.observe(stickyCartInner, {
            attributes: true,
            childList: true,
            subtree: true,
          });
        }

        const intersectionObserver = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              console.log('Intersection changed:', entry.isIntersecting);
              updateSpacerHeight();
            });
          },
          { threshold: [0, 0.1, 0.5, 0.9, 1] }
        );

        intersectionObserver.observe(stickyCart);

        let scrollTimeout;
        window.addEventListener(
          'scroll',
          () => {
            clearTimeout(scrollTimeout);
            scrollTimeout = setTimeout(() => {
              updateSpacerHeight();
            }, 50);
          },
          { passive: true }
        );
      }

      function updateSpacerHeight() {
        if (!stickyCart || !spacer) return;

        spacer.style.display = 'block';
        spacer.style.visibility = 'visible';
        spacer.style.opacity = '1';

        const stickyCartInner = stickyCart.querySelector('.product-sticky-cart, .sticky-cart');

        if (!stickyCartInner) {
          console.log(' Inner sticky cart not found');
          spacer.style.height = '0px';
          return;
        }

        const innerHeight = stickyCartInner.offsetHeight;
        const innerComputedStyle = window.getComputedStyle(stickyCartInner);
        const innerDisplay = innerComputedStyle.display;

        const isVisible = innerHeight > 0 && innerDisplay !== 'none';

        console.log(' Sticky Cart Check:', {
          innerHeight,
          innerDisplay,
          isVisible,
        });

        if (isVisible) {
          const wrapperStyles = window.getComputedStyle(stickyCart);
          const marginTop = parseInt(wrapperStyles.marginTop) || 0;
          const marginBottom = parseInt(wrapperStyles.marginBottom) || 0;

          const paddingTop = parseInt(innerComputedStyle.paddingTop) || 0;
          const paddingBottom = parseInt(innerComputedStyle.paddingBottom) || 0;

          const totalHeight = innerHeight + marginTop + marginBottom;

          console.log(' Sticky cart VISIBLE - Setting height to:', totalHeight + 'px', {
            innerHeight,
            marginTop,
            marginBottom,
            paddingTop,
            paddingBottom,
            totalHeight,
          });

          spacer.style.height = `${totalHeight}px`;
        } else {
          console.log(' Sticky cart HIDDEN - Setting height to: 0px');
          spacer.style.height = '0px';
        }
      }

      function handleResize() {
        window.addEventListener('resize', () => {
          clearTimeout(resizeTimeout);
          resizeTimeout = setTimeout(() => {
            updateSpacerHeight();
          }, 150);
        });
      }

      function cleanup() {
        if (observer) {
          observer.disconnect();
        }
        if (spacer && spacer.parentNode) {
          spacer.remove();
        }
      }

      init();

      window.addEventListener('beforeunload', cleanup);

      window.updateStickyCartSpacer = updateSpacerHeight;
    })();
  </script>
